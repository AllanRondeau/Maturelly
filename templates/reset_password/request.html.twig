{% extends 'base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe{% endblock %}

{% block body %}
        {{ form_start(requestForm) }}
            <div class="flex flex-col items-center justify-center space-y-5 h-full w-full">
                {% for flash_error in app.flashes('reset_password_error') %}
                    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                {% endfor %}

                <h1 class="h3 mb-3 text-white text-5xl border-b border-primary">Réinitialisez votre mot de passe</h1>

                <label class="flex flex-col justify-start text-lg w-4/5 md:w-3/5 lg:w-2/5" for="email">Email
                    {{ form_widget(requestForm.email, {'attr': {'class': 'bg-transparent border border-white rounded-sm px-2 py-1', 'placeholder': 'email'}}) }}
                </label>

                <p class="text-white my-4">
                    Entrez votre adresse email, et nous vous enverrons un
                    lien pour réinitialiser votre mot de passe.
                </p>
                
                <div class=" flex flex-col space-y-4 pt-5">
                    <button class="text-xl border rounded-md border-primary px-2 py-1 hover:px-3 hover:py-1 hover:-mx-1 transition-all duration-200" type="submit">Envoyer l'email de réinitialisation</button>
                    <a href="{{ path('app_login') }}" class="text-white underline text-md md:text-xs text-center">Se connecter</a>
                </div>
            </div>
        {{ form_end(requestForm) }}
{% endblock %}