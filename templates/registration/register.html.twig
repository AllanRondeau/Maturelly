{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <form method="post" class="flex flex-col items-center justify-center space-y-10 md:space-y-5 h-full w-full">
        <h1 class="h3 mb-3 text-white text-6xl sm:text-7xl md:text-5xl border-b border-primary">Inscription</h1>

        {{ form_start(registrationForm, {'attr': {'class': 'flex flex-col items-center w-2/5 space-y-4'}}) }}
        <label class="flex w-4/5 flex-col justify-start text-lg md:w-3/5 lg:w-2/5" for="registrationForm_email">Email
            {{ form_widget(registrationForm.email, {'attr': {'class': 'bg-transparent border border-white rounded-sm px-2 py-1 text-xl md:text-md', 'placeholder': 'email'}}) }}
        </label>

        <label class="flex w-4/5 flex-col justify-start text-lg md:w-3/5 lg:w-2/5" for="registrationForm_plainPassword">Mot de passe
            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'bg-transparent border border-white rounded-sm px-2 py-1 md:text-md', 'placeholder': 'mot de passe'}}) }}
        </label>

        <div class="flex w-4/5 md:w-3/5 lg:w-2/5 justify-start items-center space-x-2">
            {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'w-5 h-5 accent-primary cursor-pointer'}}) }}
            <label for="registrationForm_agreeTerms" class="text-white text-lg lg:text-sm">J'accepte les conditions</label>
        </div>

        <div class="flex flex-col space-y-4 pt-5">
            <button class="text-xl border rounded-md border-primary px-2 py-1 hover:px-3 hover:py-1 hover:-mx-1 transition-all duration-200" type="submit">
                Inscription
            </button>
            <a href="{{ path('app_login') }}" class="text-white underline text-md md:text-xs">
                Déjà inscrit ? Connectez-vous !
            </a>
        </div>
        {{ form_end(registrationForm) }}
    </form>
{% endblock %}

